{
  "include": [
    "src",
  ],
  "exclude": [
    "build/*",
    "types-temp",
    "build/vitest.config.*",
    "build/prod.config.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "importHelpers": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "outDir": "./types-temp",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "types": [
      "node",
      "vue-router",
      "vite/client"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}

