{
  "include": [
    "src",
  ],
  "exclude": [
    // "build/*",
    "types-temp",
    "build/vitest.config.*",
    "build/prod.config.*"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "importHelpers": true,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "outDir": "./types-temp",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true, /* Generates corresponding '.d.ts' file. */
    // "declarationMap": true,
    "moduleResolution": "node", /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */
    "paths": {
      "@/*": [
        "src/*"
      ],
      "types": [
        "node",
        "vue-router",
        "vite/client"
        // "@yalert-ui/icons"
      ]
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
