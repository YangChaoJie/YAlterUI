{
  "include": [
    "src"
  ],
  "exclude": ["build/*", "types-temp", "build/vitest.config.*"],
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "outDir": "./types-temp",
    "declaration": true,                      /* Generates corresponding '.d.ts' file. */
    "declarationMap": true,
    "moduleResolution": "node",               /* Specify module resolution strategy: 'node' (Node.js) or 'classic' (TypeScript pre-1.6). */
    "paths": {
      "@/*": [
        "src/*"
      ],
      "types": [
        "node",
        "vue-router",
        "@yalert-ui/icons"
      ]
    }
  }
}
